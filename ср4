#include <iostream>
using std::cout;
using std::endl;
using std::cin;
#include <cmath>

int main() {
    //кодировка
    setlocale(LC_ALL, "Rus");
    //спрашиваем границы
    cout << "Укажите границы отрезка [A,B]\n\tA = ";
    double a, b;
    cin >> a;
    cout << "\tB = ";
    cin >> b;
    //считаем
    int sum = (ceil(a) + floor(b))*(floor(b) - ceil(a) + 1) / 2;
    int sumOdd = 0;
    for(int i = ((int)ceil( a)) % 2 ? ceil(a) : ceil(a)+1; i <= b; i += 2) sumOdd += i;
    //выводим
    cout << "Сумма чисел " << sum << endl;
    cout << "Сумма чётных " << (sum - sumOdd) << endl;
    cout << "Сумма нечётных " << sumOdd << endl;
    // ждём
    system("pause");
    return 0;
}
